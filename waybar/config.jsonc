{
  "layer": "top",
  "position": "top",
  "exclusive": true,
  "margin-top": 5,
  "margin-left": 10,
  "margin-right": 10,
  "margin-bottom": -5,

  "modules-left": [
    "custom/arch-logo",
    "hyprland/workspaces",
    "cpu",
    "memory"
//    "custom/window_title"
  ],
  "modules-center": ["mpris"],
  "modules-right": [
    "tray",
    "wireplumber",
    "battery",
    "bluetooth",
    "network",
    "powerprofiles",
    "idle_inhibitor",
    "language",
    "custom/custom-shutdown",
    "custom/custom-reboot",
    "custom/custom-sleep",
    "clock",
    "swaync"
  ],

"hyprland/workspaces": {
  "icon-size": 32,
  "spacing": 16,
  "on-scroll-up": "hyprctl dispatch workspace r+1",
  "on-scroll-down": "hyprctl dispatch workspace r-1",
  "persistent-workspaces": {
    "eDP-1": [1, 2, 3, 4]
  }
},
"custom/arch-logo": {
  "icon-size": 32,
  "format": "ÔåÉ",
  "tooltip": "Arch Linux",
  "interval": 999999,  // never refresh, static icon
  "on-click": "xdg-open https://archlinux.org" // optional: open Arch site
},


  "tray": {
    "icon-size": 15,
    "spacing": 10,
    "cursor": true
  },

  "swaync": {
    "interval": 1
  },

  "custom/window_title": {
    "format": "{}",
    "exec": "~/.config/waybar/scripts/window-title.sh",
    "interval": 1
  },

  "wireplumber": {
    "format": "{volume}% {icon}",
    "format-muted": "ÔÄ¶",
    "on-click": "pavucontrol",
    "format-icons": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
  },

"bluetooth": {
  "format": "Ôäî {status}",
  "format-disabled": "Ôäî off",
  "format-connected": "Ôäî {device_alias}",
  "format-connected-battery": "Ôäî {device_alias} {device_battery_percentage}%",
  "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
  "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
  "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
  "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_battery_percentage}%",
  "on-click": "sh -c 'blueman-manager'"
},
"battery": {
  "states": {
    "good": 95,
    "warning": 30,
    "critical": 20
  },
  "format": "{icon} {capacity}%",
  "format-charging": "Ôá¶ {capacity}%",
  "format-plugged": "Ôá¶ {capacity}%",
  "format-alt": "{time} {icon}",
  "format-icons": [
    "Û∞Çé", "Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ"
  ]
},



  "custom/custom-shutdown": {
    "format": "‚èª",
    "tooltip": "Shutdown",
    "on-click": "systemctl poweroff",
    "interval": 1
  },

  "custom/custom-reboot": {
    "format": "ÔÄû",
    "tooltip": "Reboot",
    "on-click": "systemctl reboot",
    "interval": 1
  },

  "custom/custom-sleep": {
    "format": "ÔÜÜ",
    "tooltip": "Sleep",
    "on-click": "systemctl suspend",
    "interval": 1
  },

  "network": {
    "format-wifi": "{icon} {essid}",
    "format-ethernet": "Û∞§®",
    "format-disconnected": "Û∞åô disconnected",
    "format-icons": ["Û∞§Ø", "Û∞§ü", "Û∞§¢", "Û∞§¢", "Û∞§®"],
    "tooltip-format": "{ifname} via {gwaddr} \n‚Üì {bandwidthDownBytes} ‚Üë {bandwidthUpBytes}",
    "on-click": "nm-connection-editor"
  },

  "clock": {
    "format": "{:%a %d %b %H:%M}"
  },

  "mpris": {
    "format": "üéµ {status_icon} {artist} - {title}",
    "format-paused": "‚è∏ {artist} - {title}",
    "format-stopped": "",
    "player-icons": {
      "default": "üéµ",
      "mpv": "‚ñ∂",
      "firefox": "Ôâ©"
    },
    "status-icons": {
      "playing": "‚ñ∂",
      "paused": "‚è∏"
    },
    "on-click": "playerctl play-pause",
    "on-click-right": "playerctl stop",
    "on-scroll-up": "playerctl next",
    "on-scroll-down": "playerctl previous",
    "max-length": 80,
    "interval": 1
  },

  "cpu": {
    "format": "Ôíº {usage}%",
    "interval": 2,
    "tooltip": true
  },

  "memory": {
    "format": "Óâ¶ {used:0.1f}G/{total:0.1f}G",
    "interval": 5,
    "tooltip": true
  },

  "user": {
    "format": "ÔÄá {user}",
    "tooltip": false
  },

  "language": {
    "format": "üåê {lang}",
    "tooltip": true
  },

  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "ÔÅÆ",
      "deactivated": "ÔÅ∞"
    },
    "tooltip": "Idle Inhibitor"
  },

  "powerprofiles": {
    "format": "‚ö° {profile}",
    "tooltip": true
  }
}
